<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" monitorInterval="5">
    <Properties>
        <Property name="FILE_NAME">votogether</Property>
        <Property name="FILE_LOG_PATTERN">
            [%d{yyyy-MM-dd 'T' HH:mm:ss.SSS}] %-5p %pid --- [%t] %c : %m%n
        </Property>
    </Properties>

    <Appenders>
        <RollingFile
                name="RollingFileAppender"
                fileName="logs/${FILE_NAME}.log"
                filePattern="logs/${FILE_NAME}.%d{yyyy-MM-dd}.log"
        >
            <PatternLayout pattern="${FILE_LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
                <!-- <SizeBasedTriggeringPolicy size="50KB"/> -->
            </Policies>
            <!-- 인덱스 걸고 max 3 해두면 같은 인덱스 3개 유지 -->
            <!-- 동일한 시간의 파일이 3개가 되면 인덱스가 작은 것을 삭제하고 파일 이름 변경을 통해 한칸씩 파일 인덱스를 이동시킨다.-->
            <DefaultRolloverStrategy>
                <Delete basePath="logs" maxDepth="2">
                    <!-- 시간에 따른 파일 최대 3개 유지 -->
                    <!-- 파일 3개 되면 가장 이전 것을 삭제 -->
                    <IfAccumulatedFileCount exceeds="4"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

    </Appenders>

    <Loggers>
        <Logger name="org.hibernate.SQL" level="debug">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <Logger name="org.hibernate.orm.jdbc.bind" level="trace">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <Logger name="com.zaxxer.hikari" level="debug">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <Logger name="org.springframework.orm.jpa.JpaTransactionManager" level="debug">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <Root level="debug">
            <AppenderRef ref="RollingFileAppender"/>
        </Root>
    </Loggers>
</Configuration>
