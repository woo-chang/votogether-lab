<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" packages="com.example.votogether.log4j2" monitorInterval="5">
    <Properties>
        <Property name="FILE_NAME">votogether</Property>
        <Property name="ERROR_FILE_NAME">votogether-error</Property>
        <Property name="FILE_LOG_PATTERN">
            [%d{yyyy-MM-dd 'T' HH:mm:ss.SSS}] %-5p %pid --- [%t] %c : %m%n
        </Property>
    </Properties>

    <Appenders>
        <RollingFile
                name="RollingFileAppender"
                fileName="logs/${FILE_NAME}.log"
                filePattern="logs/${FILE_NAME}.%d{yyyy-MM-dd-HH:mm}.log"
        >
            <PatternLayout pattern="${FILE_LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="logs" maxDepth="1">
                    <IfLastModified age="3m"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <RollingFile
                name="RollingErrorFileAppender"
                fileName="logs/${ERROR_FILE_NAME}.log"
                filePattern="logs/error/${ERROR_FILE_NAME}.%d{yyyy-MM-dd-HH:mm}.log"
        >
            <PatternLayout pattern="${FILE_LOG_PATTERN}"/>
            <Filters>
                <LevelMatchFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="logs/error" maxDepth="1">
                    <IfLastModified age="3m"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <Slack
                name="SlackAppender"
                url="${spring:log.url}"
                channel="${spring:log.channel}"
                username="votogether-error"
        >
            <PatternLayout pattern="${FILE_LOG_PATTERN}"/>
            <Filters>
                <LevelMatchFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </Slack>

        <Async name="AsyncSlackAppender" includeLocation="true">
            <AppenderRef ref="SlackAppender"/>
        </Async>
    </Appenders>

    <Loggers>
        <Logger name="org.hibernate.SQL" level="debug">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <Logger name="org.hibernate.orm.jdbc.bind" level="trace">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <Logger name="com.zaxxer.hikari" level="debug">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <Logger name="org.springframework.orm.jpa.JpaTransactionManager" level="debug">
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>

        <Root level="debug">
            <AppenderRef ref="RollingFileAppender"/>
            <AppenderRef ref="RollingErrorFileAppender"/>
            <AppenderRef ref="AsyncSlackAppender"/>
        </Root>
    </Loggers>
</Configuration>
